<?xml version='1.0' encoding='utf-8'?>
<widget id="com.saintmarina.scrabblescore" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ScrabbleScore</name>
    <description>
        This is an easy-to-use scrabble score calculator that replaces pen-and-paper for keeping track of Scrabble scores.
    </description>
    <author email="anna@maniuk.nyc" href="scrabblescore.online">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AppendUserAgent" value="cordova" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="AppendUserAgent" value="cordova" />
        <preference name="ScrollEnabled" value="true" />
    </platform>
</widget>
